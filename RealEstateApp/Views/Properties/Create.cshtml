@model RealEstateApp.Models.Property

@{
    ViewData["Title"] = "Create Property";
}

<div class="container mt-5 mb-5" style="max-width: 900px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Add New Listing</h2>
            <p class="text-muted">Fill in the details below to publish a new property.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-5">

            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <h5 class="text-primary fw-bold mb-3"><i class="bi bi-house-door-fill me-2"></i>Property Details</h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-bold">Property Title</label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g. Luxury Villa in Kathmandu" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Listing Type</label>
                        <select asp-for="IsForSale" class="form-select form-select-lg">
                            <option value="true">For Sale</option>
                            <option value="false">For Rent</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Price" class="form-label fw-bold">Price (NRP)</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">Rs.</span>
                            <input asp-for="Price" class="form-control border-start-0" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label fw-bold">Full Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                            <input asp-for="Address" class="form-control" placeholder="Street, City, Province" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Bedrooms" class="form-label fw-bold">Bedrooms</label>
                        <input asp-for="Bedrooms" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Bedrooms" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Bathrooms" class="form-label fw-bold">Bathrooms</label>
                        <input asp-for="Bathrooms" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Bathrooms" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-5">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe the key features, neighborhood, and amenities..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <hr class="my-5" />

                <h5 class="text-primary fw-bold mb-3"><i class="bi bi-person-badge-fill me-2"></i>Agent Information</h5>
                <div class="bg-light p-4 rounded-3 mb-5">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="AgentName" class="form-label fw-bold">Agent Name</label>
                            <input asp-for="AgentName" class="form-control" value="General Inquiry" />
                            <span asp-validation-for="AgentName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="AgentEmail" class="form-label fw-bold">Agent Email</label>
                            <input asp-for="AgentEmail" class="form-control" value="info@realestateapp.com" />
                            <span asp-validation-for="AgentEmail" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="AgentPhone" class="form-label fw-bold">Agent Phone</label>
                            <input asp-for="AgentPhone" class="form-control" value="+977 9800000000" />
                            <span asp-validation-for="AgentPhone" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <h5 class="text-primary fw-bold mb-3"><i class="bi bi-images me-2"></i>Photo Gallery</h5>
                <div class="mb-5">
                    <div class="border border-2 border-dashed rounded-3 p-5 text-center bg-light position-relative">
                        <i class="bi bi-cloud-upload display-4 text-primary opacity-50"></i>
                        <h5 class="mt-3 text-dark fw-bold">Upload Property Images</h5>
                        <p class="text-muted small mb-3">Drag and drop files here or click to browse. (Max 5MB per file)</p>

                        <input type="file" name="imageFiles" class="form-control position-absolute top-0 start-0 w-100 h-100 opacity-0" style="cursor: pointer;" multiple />
                    </div>
                    <div class="form-text text-muted mt-2">
                        <i class="bi bi-info-circle me-1"></i> The first image selected will be the main cover photo.
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg py-3 fw-bold shadow-sm">
                        <i class="bi bi-check-circle-fill me-2"></i> Publish Listing
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>