@model RealEstateApp.Models.Agent

@{
    ViewData["Title"] = "Edit Agent";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark fw-bold">Edit Consultant Profile</div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <input type="hidden" asp-for="ImageUrl" />

                <div class="text-center mb-4">
                    <label class="form-label d-block fw-bold text-muted">Current Photo</label>
                    <img src="/images/@Model.ImageUrl" class="rounded-circle shadow-sm" style="width: 100px; height: 100px; object-fit: cover;" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Job Title / Bio</label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label class="form-label fw-bold">Phone</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Change Photo (Optional)</label>
                    <input type="file" name="imageFile" class="form-control" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>