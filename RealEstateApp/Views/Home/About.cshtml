@{
    ViewData["Title"] = "About Us";
}

<div class="bg-dark text-white text-center py-5 mb-5" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&w=1920&q=80'); background-size: cover; background-position: center;">
    <div class="container py-5">
        <h1 class="display-3 fw-bold">Building Dreams Since 2010</h1>
        <p class="lead text-light opacity-75">Nepal's #1 Rated Real Estate Agency</p>
    </div>
</div>

<div class="container mb-5">

    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h6 class="text-primary fw-bold text-uppercase">Our Story</h6>
            <h2 class="fw-bold mb-4">We are changing the way<br>people buy homes.</h2>
            <p class="text-muted">
                Founded in Kathmandu, <strong>RealEstateApp</strong> started with a simple mission: to make the buying and selling process transparent, easy, and honest.
            </p>
            <p class="text-muted">
                We believe that finding a home shouldn't be stressful. That's why we combine the best technology with the best human agents to guide you every step of the way. Whether you are looking for a luxury villa or a cozy apartment, we have the keys to your new life.
            </p>
            <div class="mt-4">
                <img src="https://upload.wikimedia.org/wikipedia/commons/9/9b/Signature_sample.svg" width="150" class="opacity-50" alt="Signature">
                <div class="fw-bold mt-2">CEO, RealEstateApp</div>
            </div>
        </div>
        <div class="col-lg-6 mt-4 mt-lg-0">
            <div class="row g-3">
                <div class="col-6">
                    <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?auto=format&fit=crop&w=600&q=80" class="img-fluid rounded shadow hover-scale" alt="Office">
                </div>
                <div class="col-6 mt-5">
                    <img src="https://images.unsplash.com/photo-1570129477492-45c003edd2be?auto=format&fit=crop&w=600&q=80" class="img-fluid rounded shadow hover-scale" alt="House">
                </div>
            </div>
        </div>
    </div>

    <div class="bg-light rounded-3 p-5 mb-5">
        <div class="row text-center">
            <div class="col-md-3 mb-4 mb-md-0">
                <h1 class="fw-bold text-primary display-4">500+</h1>
                <div class="text-muted small text-uppercase fw-bold">Properties Sold</div>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <h1 class="fw-bold text-primary display-4">98%</h1>
                <div class="text-muted small text-uppercase fw-bold">Happy Clients</div>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
                <h1 class="fw-bold text-primary display-4">12</h1>
                <div class="text-muted small text-uppercase fw-bold">Years Experience</div>
            </div>
            <div class="col-md-3">
                <h1 class="fw-bold text-primary display-4">50+</h1>
                <div class="text-muted small text-uppercase fw-bold">Expert Agents</div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <h3 class="fw-bold mb-3">Meet the Team</h3>
        <p class="text-muted mb-4">We are a group of passionate real estate professionals.</p>
        <a asp-controller="Agents" asp-action="Index" class="btn btn-outline-dark px-4 rounded-pill">View Our Consultants</a>
    </div>

</div>