@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building-fill-check text-warning"></i> RealEstate<span class="text-info">App</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Properties" asp-action="Index">
                                <i class="bi bi-search"></i> Browse Properties
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid-fill"></i> Services
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="servicesDropdown">

                                <li>
                                    <a class="dropdown-item" asp-controller="Agents" asp-action="Index">
                                        <i class="bi bi-people-fill text-primary me-2"></i> Our Consultants
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Properties" asp-action="Index" asp-route-propertyType="buy">
                                        <i class="bi bi-house-check-fill text-success me-2"></i> Buy a Home
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Properties" asp-action="Index" asp-route-propertyType="rent">
                                        <i class="bi bi-key-fill text-warning me-2"></i> Home on Rent
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Sell">
                                        <i class="bi bi-cash-coin text-danger me-2"></i> Sell a Home
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="About">
                                        <i class="bi bi-info-circle-fill text-info me-2"></i> About Us
                                    </a>
                                </li>

                            </ul>
                        </li>


                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Properties" asp-action="Create">
                                    <i class="bi bi-plus-circle-fill"></i> Add Listing
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Inquiries">
                                    <i class="bi bi-shield-lock-fill"></i> Admin
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="UserPanel" asp-action="MyInquiries">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<IdentityUser> SignInManager
                        @inject UserManager<IdentityUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="text-white small">Hello, <strong>@User.Identity?.Name</strong></span>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-white" style="text-decoration: none;">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link btn-login" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-register" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus-fill"></i> Register
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
  @*   @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Inquiries">Admin Panel</a>
        </li>
    }

    @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-primary fw-bold" asp-controller="UserPanel" asp-action="MyInquiries">My Dashboard</a>
        </li>
    } *@

    <main role="main" class="flex-shrink-0 mb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="row gy-5">
                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white mb-4">
                        <i class="bi bi-building-fill-check text-warning me-2"></i>RealEstate<span class="text-info">App</span>
                    </h5>
                    <p class="text-muted pe-lg-5" style="line-height: 1.8;">
                        Your trusted partner in finding the perfect home. Whether buying, selling, or renting, we bring you the best properties in Nepal with transparency and trust.
                    </p>
                    <div class="mt-4">
                        <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-twitter-x"></i></a> <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 col-6">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Properties" asp-action="Index">Browse Properties</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="Terms">Terms & Conditions</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 col-6">
                    <h5>Services</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Properties" asp-action="Index" asp-route-propertyType="buy">Buy a Home</a></li>
                        <li><a asp-controller="Properties" asp-action="Index" asp-route-propertyType="rent">Home on Rent</a></li>
                        <li><a asp-controller="Home" asp-action="Sell">Sell a Home</a></li>
                        <li><a asp-controller="Agents" asp-action="Index">Consulting</a></li>
                    </ul>
                </div>
                 
                <div class="col-lg-4 col-md-6">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="bi bi-geo-alt-fill text-warning me-3 mt-1"></i>
                            <span>Kathmandu, Bagmait, Nepal<br><small class="text-muted">Bagmati Province</small></span>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-telephone-fill text-warning me-3"></i>
                            <span>+977 9800000000</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center">
                            <i class="bi bi-envelope-fill text-warning me-3"></i>
                            <span>info@realestateapp.com</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="mb-2 mb-md-0">
                    &copy; @DateTime.Now.Year <strong>RealEstateApp</strong>. All Rights Reserved.
                </div>
                <div>
                    Made with <i class="bi bi-heart-fill text-danger mx-1"></i> in <strong>Nepal</strong>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>