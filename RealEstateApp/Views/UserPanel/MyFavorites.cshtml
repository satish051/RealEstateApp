@model IEnumerable<RealEstateApp.Models.SavedProperty>

@{
    ViewData["Title"] = "My Saved Properties";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-4 p-2">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                            <span class="fw-bold fs-5">@User.Identity.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                        <div>
                            <div class="small text-muted">Welcome,</div>
                            <div class="fw-bold text-dark">@User.Identity.Name</div>
                        </div>
                    </div>
                    <div class="list-group dashboard-sidebar">
                        <a asp-action="MyInquiries" class="list-group-item list-group-item-action">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard / Inquiries
                        </a>
                        <a asp-action="MyFavorites" class="list-group-item list-group-item-action active">
                            <i class="bi bi-heart me-2"></i> Saved Properties
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear me-2"></i> Account Settings
                        </a>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="list-group-item list-group-item-action text-danger bg-transparent w-100 text-start">
                                <i class="bi bi-box-arrow-left me-2"></i> Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark">Saved Properties</h3>
                <a asp-controller="Properties" asp-action="Index" class="btn btn-outline-primary btn-sm">Find More Homes</a>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 border rounded-3 bg-light">
                    <i class="bi bi-heart text-secondary display-1 opacity-25"></i>
                    <h4 class="mt-3 text-muted">Your wishlist is empty.</h4>
                    <p class="text-secondary">Click the heart icon on properties to save them here.</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        if (item.Property != null)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 shadow-sm border-0 overflow-hidden">
                                    <div class="position-relative">
                                        <img src="/images/@item.Property.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="House">
                                        <div class="position-absolute top-0 end-0 p-2">
                                            <form asp-action="ToggleSave" method="post">
                                                <input type="hidden" name="propertyId" value="@item.PropertyId" />
                                                <button type="submit" class="btn btn-light btn-sm rounded-circle shadow text-danger" title="Remove">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold">@item.Property.Title</h5>
                                        <h6 class="text-primary fw-bold">NRP @item.Property.Price.ToString("N0")</h6>
                                        <p class="small text-muted mb-2"><i class="bi bi-geo-alt"></i> @item.Property.Address</p>
                                        <div class="d-grid">
                                            <a asp-controller="Properties" asp-action="Details" asp-route-id="@item.PropertyId" class="btn btn-outline-primary btn-sm">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>