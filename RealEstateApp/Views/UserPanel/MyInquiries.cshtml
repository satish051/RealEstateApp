@model IEnumerable<RealEstateApp.Models.Inquiry>

@{
    ViewData["Title"] = "My Dashboard";
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    var pendingCount = Model.Count();
    // Note: In a real app, you'd pass the Favorites count via ViewBag,
    // but for now we will just focus on the layout.
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-4 p-2">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                            <span class="fw-bold fs-5">@User.Identity.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                        <div>
                            <div class="small text-muted">Welcome,</div>
                            <div class="fw-bold text-dark">@User.Identity.Name</div>
                        </div>
                    </div>

                    <div class="list-group dashboard-sidebar">
                        <a asp-action="MyInquiries" class="list-group-item list-group-item-action active">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard / Inquiries
                        </a>
                        <a asp-action="MyFavorites" class="list-group-item list-group-item-action">
                            <i class="bi bi-heart me-2"></i> Saved Properties
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear me-2"></i> Account Settings
                        </a>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="list-group-item list-group-item-action text-danger bg-transparent w-100 text-start">
                                <i class="bi bi-box-arrow-left me-2"></i> Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card stat-card shadow-sm bg-primary text-white h-100">
                        <div class="card-body d-flex align-items-center">
                            <div class="icon-box bg-white bg-opacity-25 me-3">
                                <i class="bi bi-envelope-paper fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold">@pendingCount</h3>
                                <div class="small opacity-75">Active Inquiries</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card stat-card shadow-sm bg-white border h-100">
                        <div class="card-body d-flex align-items-center">
                            <div class="icon-box bg-danger bg-opacity-10 text-danger me-3">
                                <i class="bi bi-heart-fill fs-3"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold text-dark">My Wishlist</h5>
                                <a asp-action="MyFavorites" class="small text-decoration-none stretched-link">View Saved Homes &rarr;</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">Recent Inquiries</h5>
                    <span class="badge bg-light text-dark border">Last 30 Days</span>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="mb-3 opacity-50" alt="Empty">
                            <h5 class="text-muted">No inquiries sent yet.</h5>
                            <a asp-controller="Properties" asp-action="Index" class="btn btn-sm btn-primary mt-2">Browse Properties</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-secondary small text-uppercase">
                                    <tr>
                                        <th class="ps-4">Property</th>
                                        <th>Date Sent</th>
                                        <th>Agent Info</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                @if (item.Property != null)
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <div class="me-3 rounded overflow-hidden" style="width: 50px; height: 50px;">
                                                            @if (!string.IsNullOrEmpty(item.Property.ImageUrl))
                                                            {
                                                                <img src="/images/@item.Property.ImageUrl" style="width:100%; height:100%; object-fit:cover;">
                                                            }
                                                            else
                                                            {
                                                                <div class="bg-secondary w-100 h-100"></div>
                                                            }
                                                        </div>
                                                        <div>
                                                            <div class="fw-bold text-dark">@item.Property.Title</div>
                                                            <div class="small text-muted">NRP @item.Property.Price.ToString("N0")</div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-danger"><i class="bi bi-exclamation-circle"></i> Property Removed</span>
                                                }
                                            </td>
                                            <td class="text-secondary">@item.DateCreated.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (item.Property != null)
                                                {
                                                    <div class="small">@item.Property.AgentName</div>
                                                    <a href="tel:@item.Property.AgentPhone" class="small text-decoration-none">@item.Property.AgentPhone</a>
                                                }
                                            </td>
                                            <td><span class="badge bg-success bg-opacity-10 text-success">Sent</span></td>

                                            <td class="text-end pe-4">
                                                <div class="d-flex justify-content-end gap-2">
                                                    @if (item.Property != null)
                                                    {
                                                        <a asp-controller="Properties" asp-action="Details" asp-route-id="@item.PropertyId" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-eye"></i> View
                                                        </a>
                                                    }

                                                    <form asp-action="DeleteInquiry" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                onclick="return confirm('Are you sure? This will remove the message from the agent\'s inbox too.');">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>